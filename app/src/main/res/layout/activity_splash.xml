<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/primaryDark"
    tools:context=".splash.SplashActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/downloadIconsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/currentDataRefreshIcon"
            android:layout_width="@dimen/icon_refresh_size"
            android:layout_height="@dimen/icon_refresh_size"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_autorenew" />

        <TextView
            android:id="@+id/currentDataLabel"
            style="@style/AppTheme.SplashScreen.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_margin_xs"
            android:text="@string/fetching_current_data"
            app:layout_constraintBottom_toBottomOf="@id/currentDataRefreshIcon"
            app:layout_constraintStart_toEndOf="@id/currentDataRefreshIcon"
            app:layout_constraintTop_toTopOf="@id/currentDataRefreshIcon" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>