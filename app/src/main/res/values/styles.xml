<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/icons</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/icons</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBarScreen" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.SplashScreen" parent="AppTheme.NoActionBarScreen" />

    <style name="AppTheme.HomeScreen" parent="AppTheme.NoActionBarScreen" />

    <style name="AppTheme.HomeScreen.Counter" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.DatavizScreen" parent="AppTheme" />

    <style name="AppTheme.SplashScreen.Text" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">@dimen/splashscreen_text_size</item>
    </style>

</resources>
